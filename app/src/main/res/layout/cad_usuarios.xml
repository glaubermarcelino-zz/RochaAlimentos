<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lUsuarios">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/usuarios"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:text="Nome completo"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/usuario_nome_completo"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="text"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:text="Usuario"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/usuario_nome"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="text"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:text="Senha (minimo 8 caracteres)"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/usuario_senha"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:text="Tipo de usuÃ¡rio.:"
        android:layout_gravity="center"/>
    <Spinner
        android:layout_gravity="center"
        android:id="@+id/sp_perfil"
        android:layout_width="300dp"
        android:layout_height="wrap_content"></Spinner>
    <Button
        android:layout_marginTop="15dp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="#00ccFF"
        android:onClick="AddUsuario"
        android:text="Adicionar"/>

</LinearLayout>
